{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile TypeScript",
      "type": "shell",
      "command": "npm run build --silent",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "label": "Compile TypeScript without linting",
      "type": "shell",
      "command": "npm run build-only --silent",
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Lint project",
      "type": "shell",
      "command": "npm run lint --silent",
      "group": "none",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run TypeScript code using ts-node",
      "type": "shell",
      "command": "npm run start:ts --silent",
      "group": "none",
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Run generated JavaScript code using node",
      "type": "shell",
      "command": "npm run start:js --silent",
      "group": "none",
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
